<%= render :partial => "/shared/backlink", :locals => { :page => new_prison_allocation_path(@prison.code, @case_info.nomis_offender_id) } %>

<h2 class="govuk-heading-m"><%= @prisoner.full_name %> - <%= @prisoner.offender_no %></h2>

<%= form_for(@case_info, url: update_prd_prison_case_information_path(@prison.code, @prisoner.offender_no), method: :put, id: "case_info_form") do |f| %>
  <div class="govuk-form-group">
    <!-- Change text in en.yml -->
    <%= f.gov_uk_date_field :parole_review_date, page_heading: false %>
  </div>

  <%= submit_tag "Update", role: "button", draggable: "false", class: "govuk-button govuk govuk-!-margin-top-4" %>

<% end %>
