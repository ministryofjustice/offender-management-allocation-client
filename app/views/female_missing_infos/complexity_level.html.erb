<h1 class="govuk-heading-xl govuk-!-margin-bottom-4">Add complexity level</h1>

<p class="govuk-body">You can find the complexity score in XXXX.</p>

<p class="govuk-body">Complexity score must be added before the case can be allocated.</p>

<%= form_for(@missing_info,
             url: wizard_path,
             method: :put,
             builder: GOVUKDesignSystemFormBuilder::FormBuilder) do |form| %>
  <%= form.govuk_error_summary %>

  <%= form.govuk_collection_radio_buttons(
          :complexity_level,
          [OpenStruct.new(name: 'High', value: 'high'),
           OpenStruct.new(name: 'Medium', value: 'medium'),
           OpenStruct.new(name: 'Low', value: 'low')],
          :value,
          :name,
          legend: nil
      ) %>
  <%= form.submit "Update", role: "button", draggable: "false", class: "govuk-button" %>
  <% if @secondary_button %>
    <%= form.submit "Save and Allocate", role: "button", draggable: "false", class: "govuk-button govuk-button--secondary govuk-!-margin-left-4" %>
  <% end %>

<% end %>