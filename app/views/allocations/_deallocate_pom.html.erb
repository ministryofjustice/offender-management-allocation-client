<div class="moj-timeline__item">
  <div class="moj-timeline__header">
    <h2 class="moj-timeline__title"><%= allocation_type %> unallocated
      <% if allocation.event_trigger == 'offender_transferred' %>
        (transfer)
      <% end %>
    </h2>
  </div>

  <div class="moj-timeline__description">
    <% unless allocation.event_trigger == 'offender_transferred' %>
      Prisoner unallocated <%= allocation_type == 'Co-working' ? 'co-working POM ' : 'POM ' %>
    <%= pom_name.titleize %> - <%= format_email(pom_email) %>
    <% end %>
  </div>
  <br/>
&nbsp;
  <p class="moj-timeline__date"><%= format_date_long(allocation.updated_at) %></p>
</div>
