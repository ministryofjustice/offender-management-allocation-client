<li class="moj-primary-navigation__item">
  <% if current_page?(path) || controllers.any? { |c| c == controller_name } %>
    <%= link_to text, path, class: "moj-primary-navigation__link", aria: { current: "page" } %>
  <% else %>
    <%= link_to text, path, class: "moj-primary-navigation__link" %>
  <% end %>
</li>
