  <% if @filtered[key].blank?  %>
    None
  <% else %>
    <table class="responsive tablesorter">
      <thead>
      <tr>
        <<th scope="col">Prisoner number</th>
        <<th scope="col">Prisoner name</th>
      </tr>
      </thead>
      <tbody>
        <% @filtered[key].each do |offender| %>
          <tr class="govuk-table__row offender_details">
            <td class="govuk-table__cell offender_detail"><%= offender.offender_no %></td>
            <td class="govuk-table__cell offender_detail"><%= offender.full_name %></td>
          <tr>
        <% end %>
      </tbody>
    </table>
  <% end %>